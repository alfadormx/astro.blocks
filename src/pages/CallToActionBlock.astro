---
import Layout from '../layouts/Layout.astro';
import CallToAction from '~/components/blocks/composite/CallToAction.astro';

const metadata = {
  title: {
    default: 'Call To Action Block',
  },
  description: 'Demo of the CallToAction composite block',
};
---

<Layout metadata={metadata}>
  <CallToAction
    container={{
      content: {
        border: { width: 'border', color: 'border-border-emphasis border-dotted' },
      },
      border: { width: 'border', color: 'border-border' },
    }}
    headline={{
      tagline: 'Call to Action',
      title: 'Astro + Tailwind CSS',
      subtitle:
        "Be very surprised by these huge fake numbers you are seeing on this page. Don't waste more time!",
      align: 'center',
    }}
    actions={[
      {
        label: 'Get template',
        icon: 'heroicons:arrow-down-tray',
        intent: 'primary',
        size: 'lg',
        variant: 'solid',
        shape: 'pill',
      },
      {
        label: 'Subscribe Now',
        icon: 'heroicons:arrow-top-right-on-square',
        intent: 'secondary',
        size: 'lg',
        variant: 'solid',
        shape: 'pill',
        iconPosition: 'right',
      },
    ]}
  />
</Layout>
