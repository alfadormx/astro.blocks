---
import Layout from '../layouts/Layout.astro';
import Container from '~/components/blocks/composite/Container.astro';
import Headline from '~/components/blocks/composite/Headline.astro';
import ItemsGrid from '~/components/blocks/composite/ItemsGrid.astro';

const metadata = {
  title: {
    default: 'Item Block Demo',
  },
  description: 'Demo page for the Item composite block',
};
---

<Layout metadata={metadata}>
  <Container
    htmlTag="section"
    containerWidthType="full"
    content={{ widthType: 'boxed' }}
    spacing={{ margin: 'my-8', padding: 'p-6' }}
  >
    <Headline
      title="Item Grid and Item Block Demo"
      subtitle="Showcase of the Item composite block with various configurations"
      align="center"
    />

    <Container
      spacing={{ padding: '', margin: 'mt-12 mb-8' }}
      content={{ spacing: { padding: '' } }}
    >
      <h2 class="text-2xl font-bold mb-4">Basic grid (no defaultItemConfig)</h2>
      <ItemsGrid
        columns={3}
        class="mt-12"
        items={[
          {
            icon: { name: 'heroicons:sun' },
            title: 'No customization',
            content: 'Icon configuration is default.',
          },
          {
            icon: {
              name: 'heroicons:sparkles',
              class: 'bg-accent text-background p-2 rounded-full',
            },
            title: 'Icon customization',
            content: 'Icon as been given a background, padding and rounded corners.',
          },
          {
            icon: { name: 'heroicons:bolt', class: 'text-success' },
            title: 'Vertical Layout with action',
            content: 'You shall see a button below.',
            actions: [{ label: 'Learn More', intent: 'success' }],
          },
          {
            icon: { name: 'heroicons:sun' },
            title: 'No customization',
            content: 'Icon configuration is default.',
            layout: 'horizontal',
          },
          {
            icon: {
              name: 'heroicons:sparkles',
              class: 'bg-accent text-background p-2 rounded-full',
            },
            title: 'Icon customization',
            content: 'Icon as been given a background, padding and rounded corners.',
            layout: 'horizontal',
          },
          {
            icon: { name: 'heroicons:bolt', class: 'text-success' },
            title: 'Horizontal Layout with action',
            content: 'You shall see a button below.',
            actions: [{ label: 'Learn More', intent: 'success' }],
            layout: 'horizontal',
          },
        ]}
      />
    </Container>

    <Container spacing={{ padding: '', margin: 'mb-8' }} content={{ spacing: { padding: '' } }}>
      <h2 class="text-2xl font-bold mb-4">Grid with default layout and action</h2>
      <ItemsGrid
        columns={2}
        class="mt-16"
        defaultItemConfig={{
          layout: 'horizontal',
          actions: [{ label: 'Default Action', intent: 'accent' }],
        }}
        items={[
          {
            icon: { name: 'heroicons:star' },
            title: 'Default layout & action',
            content: 'This item uses the default horizontal layout and action.',
          },
          {
            icon: { name: 'heroicons:fire', class: 'text-error' },
            title: 'Override action',
            content: 'This item overrides the default action.',
            actions: [{ label: 'Custom Action', intent: 'error' }],
          },
          {
            icon: { name: 'heroicons:moon' },
            title: 'Default layout & action',
            content: 'This item uses the default horizontal layout and action.',
          },
        ]}
      />
    </Container>
  </Container>
</Layout>
