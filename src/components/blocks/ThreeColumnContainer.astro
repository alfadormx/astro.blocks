---
import Container from '~/components/blocks/Container.astro';
import type { ThreeColumnContainerProps } from '~/types/container.types';

type Props = ThreeColumnContainerProps;

const {
  gap = 'gap-6',
  responsive = false,
  breakpoint = 'md:',
  gridClass,
  ...containerProps
} = Astro.props;

// Build grid classes
let layoutClass =
  gridClass || (responsive ? `grid-cols-1 ${breakpoint}grid-cols-3` : 'grid-cols-3');
layoutClass += ` ${gap}`;
---

<Container
  {...containerProps}
  layout={{
    type: 'grid',
    class: layoutClass,
  }}
>
  <slot name="column1" />
  <slot name="column2" />
  <slot name="column3" />
</Container>
