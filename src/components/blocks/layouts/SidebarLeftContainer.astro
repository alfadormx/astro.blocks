---
import Container from '~/components/blocks/composite/Container.astro';
import type { SidebarContainerProps } from '~/types/container.types';

type Props = SidebarContainerProps;

const {
  gap = 'gap-6',
  responsive = false,
  breakpoint = 'md:',
  gridClass,
  ...containerProps
} = Astro.props;

// Build grid classes - use grid-cols-[25%_75%] for precise 1/4 and 3/4 split
let layoutClass =
  gridClass ||
  (responsive ? `grid-cols-1 ${breakpoint}grid-cols-[25%_75%]` : 'grid-cols-[25%_75%]');
layoutClass += ` ${gap}`;
---

<Container
  {...containerProps}
  layout={{
    type: 'grid',
    class: layoutClass,
  }}
>
  <div>
    <slot name="sidebar" />
  </div>
  <div>
    <slot name="main" />
  </div>
</Container>
