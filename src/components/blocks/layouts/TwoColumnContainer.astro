---
import Container from '~/components/blocks/composite/Container.astro';
import type { TwoColumnContainerProps } from '~/types/container.types';
import { cn } from '~/utils/styles';

type Props = TwoColumnContainerProps;

const {
  gap = 'gap-6',
  responsive = false,
  breakpoint = 'md:',
  gridClass,
  reverseOnMobile = false,
  ...containerProps
} = Astro.props;

// Build grid classes
const layoutClass = cn(
  gridClass || (responsive ? `grid-cols-1 ${breakpoint}grid-cols-2` : 'grid-cols-2'),
  gap
);

// Handle reverse order on mobile
const column1Class = cn(reverseOnMobile && responsive && `${breakpoint}order-1 order-2`);
const column2Class = cn(reverseOnMobile && responsive && `${breakpoint}order-2 order-1`);
---

<Container
  {...containerProps}
  layout={{
    type: 'grid',
    class: layoutClass,
  }}
>
  <div class={column1Class}>
    <slot name="column1" />
  </div>
  <div class={column2Class}>
    <slot name="column2" />
  </div>
</Container>
