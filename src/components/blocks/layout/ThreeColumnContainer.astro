---
import merge from 'lodash.merge';
import Container from './Container.astro';
import type { ContainerProps, ThreeColumnContainerProps } from '~/types/container.types';
import { cn } from '~/utils/styles';

type Props = ThreeColumnContainerProps;

const {
  gap = 'gap-6',
  responsive = false,
  breakpoint = 'md:',
  leftColumn,
  centerColumn,
  rightColumn,
  ...containerProps
} = Astro.props;

// Build grid classes
const layoutClass = cn(responsive ? `grid-cols-1 ${breakpoint}grid-cols-3` : 'grid-cols-3', gap);

const leftColumnClass = cn(
  leftColumn?.background?.class,
  leftColumn?.spacing?.padding,
  leftColumn?.spacing?.margin,
  leftColumn?.border?.width,
  leftColumn?.border?.color,
  leftColumn?.border?.radius,
  leftColumn?.class
);

const centerColumnClass = cn(
  centerColumn?.background?.class,
  centerColumn?.spacing?.padding,
  centerColumn?.spacing?.margin,
  centerColumn?.border?.width,
  centerColumn?.border?.color,
  centerColumn?.border?.radius,
  centerColumn?.class
);

const rightColumnClass = cn(
  rightColumn?.background?.class,
  rightColumn?.spacing?.padding,
  rightColumn?.spacing?.margin,
  rightColumn?.border?.width,
  rightColumn?.border?.color,
  rightColumn?.border?.radius,
  rightColumn?.class
);

const defaultContainer = {
  htmlTag: 'div',
  content: { air: 'none', widthType: 'full' },
  layout: { type: 'grid', class: layoutClass },
  printDebug: true,
} as ContainerProps;

const mergedContainerProps = merge({}, defaultContainer, containerProps);
---

<Container {...mergedContainerProps}>
  <div class={leftColumnClass}>
    <slot name="left" />
  </div>
  <div class={centerColumnClass}>
    <slot name="center" />
  </div>
  <div class={rightColumnClass}>
    <slot name="right" />
  </div>
</Container>
